<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="technology.purser.puntastic.MainActivity"
    android:background="#7575c8">

    <EditText
        android:layout_width="wrap_content"
        android:minWidth="50dp"
        android:id="@+id/in_text"
        android:gravity="center"
        android:layout_height="50dp"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:text=""
        android:alpha="1"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/pun_text"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:layout_below="@id/in_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/base_text"
        android:textColor="#ffffff"
        android:layout_below="@id/pun_text"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Pun"
        android:id="@+id/btn"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:layout_below="@id/base_text"
        android:onClick="makePun"/>
</RelativeLayout>
